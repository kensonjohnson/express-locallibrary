<h1><%= title %>: <%= data.book.title %></h1>

<% if(data.bookInstances.length > 0){ %>
<p>
  <strong
    >Delete the following books from inventory before attempting to delete this
    book entry.</strong
  >
</p>

<h4>Books</h4>
<ul class="list-group w-auto">
  <% data.bookInstances.forEach((book)=>{ %>
  <li class="list-group-item list-group-item-action d-flex gap-3 py-1">
    <a href="<%= book.url %>"><%= book._id %></a>
  </li>
  <% }) %>
</ul>

<% } else { %>
<p>Do you really want to delete this book entry?</p>
<form class="form-group" action="" method="post">
  <input
    type="hidden"
    id="bookid"
    class="form-control"
    name="bookid"
    required
    value="<%= data.book._id %>"
  />
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %>
