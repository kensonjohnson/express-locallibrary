<h1><%= title %></h1>

<h4>Do you really want to delete the copy of this book?</h4>
<h4>ID: <%= data._id %></h4>
<div class="card mt-3">
  <div class="card-header "><strong>Title: </strong><a href="<%= data.book.url %>"><%= data.book.title %></a></div>
  <div class="card-body "><strong>Imprint: </strong><%= data.imprint %></div>
  <div class="card-footer d-flex gap-3 "><strong>Status: </strong>
    <% if(data.status){ %>
    <span class="<%= data.status === "Available" ? "text-success" : data.status === "Maintenance" ? "text-danger" : "text-warning" %>"><%= data.status %></span>
    <% } if(data.status !== "Available"){ %>
    <span>Due: <%= data.due_back.toLocaleDateString() %></span>
    <% } %>
  </div>
</div>
<form action="" method="post">
  <div class="form-group">
    <input id="id" class="form-control" value="<%= data._id %>" name="id" required type="hidden">
  </div>
  <button class="btn btn-primary my-4" type="submit">Delete</button>
</form>