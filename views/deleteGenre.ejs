<h1><%= title %>: <%= data.genre.name %></h1>

<% if(data.booksInGenre.length > 0){ %>
<p>
  <strong>Delete the following books before attempting to delete this genre.</strong>
</p>

<h4>Books</h4>
<ul class="list-group w-auto">
  <% data.booksInGenre.forEach((book)=>{ %>
  <li class="list-group-item list-group-item-action d-flex gap-3 py-1">
    <%= book.author.name %>
    <div class="vr"></div>
    <a href="<%= book.url %>"><%= book.title %></a>
  </li>
  <% }) %>
</ul>

<% } else { %>
<p>Do you really want to delete this genre?</p>
<form class="form-group" action="" method="post">
  <input type="hidden" id="genreid" class="form-control" name="genreid" required value="<%= data.genre._id %>" />
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %>