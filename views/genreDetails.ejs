<h1>Genre: <%=data ? data.genre.name : "Unknown" %></h1>

<h4>Books</h4>

<div class="d-flex flex-column gap-2 w-100">
  <% if(data){ data.genreBooks.forEach((book)=>{%>
  <div class="card">
    <div class="card-header">
      <a href="<%= book.url %>"><%= book.title %></a>
    </div>
    <div class="card-body"><%= book.summary %></div>
  </div>
  <% })} else { %>
  <p>No books to show.</p>
  <% } %>
</div>
<hr>
<div class="d-flex gap-5">
  <p><a href="<%= data.genre.url %>/delete">Delete Genre</a></p>
  <p><a href="<%= data.genre.url %>/update">Update Genre</a></p>
</div>